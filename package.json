{
    "name": "@wldyslw/react-bottom-sheet",
    "version": "0.1.1",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "pages": "tsc && vite build -c ./vite.pages-config.ts",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview"
    },
    "files": [
        "lib",
        "README.md"
    ],
    "main": "./lib/react-bottom-sheet.umd.cjs",
    "module": "./lib/react-bottom-sheet.js",
    "exports": {
        ".": {
            "import": "./lib/react-bottom-sheet.js",
            "require": "./lib/react-bottom-sheet.umd.cjs"
        }
    },
    "types": "./lib/react-bottom-sheet.d.ts",
    "peerDependencies": {
        "react": "^17.0.0 || ^18.0.0",
        "react-dom": "^17.0.0 || ^18.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.3.1",
        "@types/react": "^18.0.37",
        "@types/react-dom": "^18.0.11",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "@vitejs/plugin-react-swc": "^3.0.0",
        "autoprefixer": "^10.4.14",
        "eslint": "^8.38.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.3.4",
        "eslint-plugin-tailwindcss": "^3.12.1",
        "leva": "^0.9.35",
        "postcss": "^8.4.24",
        "prettier-plugin-tailwindcss": "^0.3.0",
        "tailwindcss": "^3.3.2",
        "typedoc": "^0.24.8",
        "typedoc-plugin-markdown": "^3.15.3",
        "typescript": "^5.0.2",
        "vite": "^4.3.9",
        "vite-plugin-dts": "^2.3.0"
    },
    "sideEffects": false
}
